@inherits FritzFormInputBase<int?>

<InputNumber hidden
             TValue="int?"
             Value="Value"
             ValueChanged="OnValueChanged"
             ValueExpression="For" />

<MudAutocomplete FullWidth="true"
                 Label="@Label"
                 OnlyValidateIfDirty="true"
                 ResetValueOnEmptyText="true"
                 SearchFunc="Search"
                 SelectValueOnTab="true"
                 ShowProgressIndicator="true"
                 T="MyDictionaryItemDto"
                 ToStringFunc="DisplayDictionaryItem"
                 Value="DictionaryItemDto"
                 ValueChanged="OnDictionaryItemDtoChanged"
                 Variant="Variant.Text">
    <NoItemsTemplate>
        <MudText>
            @localizer[nameof(AppStrings.NoDictionaryItemsFound), DictionaryCode]
        </MudText>
    </NoItemsTemplate>
</MudAutocomplete>