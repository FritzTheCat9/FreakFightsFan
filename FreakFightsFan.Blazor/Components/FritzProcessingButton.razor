<MudButton ButtonType=ButtonType
           Color=Color
           Variant=Variant
           Disabled=_processing>
    @if (_processing)
    {
        <MudProgressCircular Size=Size.Small
                             Indeterminate=true />
        <MudText>
            @ProcessingButtonText
        </MudText>
    }
    else
    {
        <MudText Typo=Typo.subtitle2>
            @ButtonText
        </MudText>
    }
</MudButton>
