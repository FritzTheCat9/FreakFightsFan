<MudButton ButtonType="ButtonType"
           Color="Color"
           Disabled="_processing"
           Variant="Variant">
    @if (_processing)
    {
        <MudProgressCircular Indeterminate=true
                             Size=Size.Small />
        <MudText>
            @ProcessingButtonText
        </MudText>
    }
    else
    {
        <MudText Typo=Typo.subtitle2>
            @ButtonText
        </MudText>
    }
</MudButton>