@inherits FluentInputBase<string>

<FluentTextField Value="@Value" ValueChanged="OnValueChanged" ValueExpression="For" Label="@Label" style="width: 100%;" AutoComplete="@Autocomplete" />

@code {
    [Parameter] public Expression<Func<string>> For { get; set; }
    [Parameter] public string Autocomplete { get; set; } = "off";

    protected override bool TryParseValueFromString(string value, out string result, out string validationErrorMessage)
    {
        result = value;
        validationErrorMessage = null;
        return true;
    }

    private void OnValueChanged(string value)
    {
        Value = value;
        ValueChanged.InvokeAsync(Value);
    }
}