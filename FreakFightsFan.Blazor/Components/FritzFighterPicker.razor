<MudAutocomplete For="For"
                 FullWidth="true"
                 Label="@Label"
                 OnlyValidateIfDirty="OnlyValidateIfDirty"
                 @ref="_autocomplete"
                 ResetValueOnEmptyText="true"
                 SearchFunc="Search"
                 SelectValueOnTab="true"
                 ShowProgressIndicator="true"
                 T="FighterDto"
                 ToStringFunc="_displayFighter"
                 Value="Value"
                 ValueChanged="OnValueChanged"
                 Variant="Variant.Text">
    <NoItemsTemplate>
        <MudText>
            @Localizer[nameof(AppStrings.NoFightersFound)]
        </MudText>
    </NoItemsTemplate>
    <ItemTemplate Context="item">
        <DisplayFighterListItem Fighter="item" />
    </ItemTemplate>
</MudAutocomplete>