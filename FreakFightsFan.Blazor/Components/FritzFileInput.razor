@if (_isImageValid && !string.IsNullOrEmpty(ImageBase64))
{
    <MudImage Alt="@localizer[nameof(AppStrings.Image)]"
              Src="@ImageBase64"
              Width="400" />
}
else if (!string.IsNullOrEmpty(Url))
{
    <MudImage Alt="@localizer[nameof(AppStrings.Image)]"
              Src="@Url"
              Width="400" />
}
else
{
    <MudItem>
        @localizer[nameof(AppStrings.NoImageLoaded)]
    </MudItem>
}

<MudFileUpload Accept="@_allowedFileTypesString"
               AppendMultipleFiles="false"
               @bind-Files="File"
               For="ForFile"
               OnFilesChanged="UploadFiles"
               T="IBrowserFile">
    <ActivatorContent>
        <MudButton Color="Color.Primary"
                   StartIcon="@Icons.Material.Filled.AttachFile"
                   Variant="Variant.Filled">
            @localizer[nameof(AppStrings.UploadImage)]
        </MudButton>
    </ActivatorContent>
</MudFileUpload>