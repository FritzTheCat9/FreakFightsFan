@if (_isImageValid && !string.IsNullOrEmpty(ImageBase64))
{
    <MudImage Src=@ImageBase64
              Width=400
              Alt=@Localizer[nameof(AppStrings.Image)] />
}
else if (!string.IsNullOrEmpty(Url))
{
    <MudImage Src=@Url
              Width=400
              Alt=@Localizer[nameof(AppStrings.Image)] />
}
else
{
    <MudItem>
        @Localizer[nameof(AppStrings.NoImageLoaded)]
    </MudItem>
}

<MudFileUpload T=IBrowserFile
               @bind-Files=File
               OnFilesChanged=UploadFiles
               For=ForFile
               Accept=@_allowedFileTypesString
               AppendMultipleFiles=false>
    <ActivatorContent>
        <MudButton Variant=Variant.Filled
                   Color=Color.Primary
                   StartIcon=@Icons.Material.Filled.AttachFile>
            @Localizer[nameof(AppStrings.UploadImage)]
        </MudButton>
    </ActivatorContent>
</MudFileUpload>