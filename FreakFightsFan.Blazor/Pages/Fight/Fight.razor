@page "/fights"
@inject IExceptionHandler ExceptionHandler
@inject IFightHttpService FightHttpService
@inject IDialogService DialogService
@inject NavigationManager NavigationManager

<PageTitle>Fights</PageTitle>

<MudTable ServerData="@(new Func<TableState, Task<TableData<FightDto>>>(ServerReload))"
          Dense="true" Hover="true" @ref="table">
    <ToolBarContent>
        <MudText Typo="Typo.h6">Fights</MudText>
        <MudIconButton Icon="@Icons.Material.Filled.Add" Size="Size.Small" OnClick="@(() => CreateFight())"></MudIconButton>
        <MudSpacer />
        <MudTextField T="string" ValueChanged="@(searchText => OnSearch(searchText))" Placeholder="Search" Adornment="Adornment.Start"
                      AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Medium"></MudTextField>
    </ToolBarContent>
    <HeaderContent>
        <MudTh><MudTableSortLabel SortLabel="name" T="FightDto">Name</MudTableSortLabel></MudTh>
        <MudTh><MudText>Actions</MudText></MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="Name">@context.Name</MudTd>
        <MudTd>
            <MudIconButton Icon="@Icons.Material.Filled.Edit" Size="Size.Small" OnClick="@(() => UpdateFight(@context))"></MudIconButton>
            <MudIconButton Icon="@Icons.Material.Filled.Delete" Size="Size.Small" OnClick="@(() => DeleteFight(@context.Id))"></MudIconButton>
        </MudTd>
    </RowTemplate>
    <NoRecordsContent>
        <MudText>No matching records found</MudText>
    </NoRecordsContent>
    <LoadingContent>
        <MudText>Loading...</MudText>
    </LoadingContent>
    <PagerContent>
        <MudTablePager />
    </PagerContent>
</MudTable>

@code {
    private MudTable<FightDto> table;
    private string searchString = "";
    public PagedList<FightDto> FightsPagedList { get; set; }

    private async Task<TableData<FightDto>> ServerReload(TableState state)
    {
        var getAllFightsRequest = new GetAllFightsRequest
            {
                Page = state.Page + 1,
                PageSize = state.PageSize,
                SortColumn = state.SortLabel,
                SortOrder = ((SortOrder)state.SortDirection),
                SearchTerm = searchString,
            };

        try
        {
            FightsPagedList = await FightHttpService.GetAllFights(getAllFightsRequest);
        }
        catch (Exception ex)
        {
            ExceptionHandler.HandleExceptions(ex);
            return new TableData<FightDto>() { TotalItems = 0, Items = new List<FightDto>() };
        }

        return new TableData<FightDto>()
            {
                TotalItems = FightsPagedList.TotalCount,
                Items = FightsPagedList.Items
            };
    }

    private void OnSearch(string searchText)
    {
        searchString = searchText;
        table.ReloadServerData();
    }

    private async Task DeleteFight(int id)
    {
        try
        {
            await FightHttpService.DeleteFight(id);
            await table.ReloadServerData();
        }
        catch (Exception ex)
        {
            ExceptionHandler.HandleExceptions(ex);
        }
    }

    private async Task UpdateFight(FightDto fightDto)
    {
        var dialogOptions = new DialogOptions() { CloseOnEscapeKey = true, CloseButton = true };
        var parameters = new DialogParameters<UpdateFightDialog>();
        parameters.Add(x => x.UpdateFightRequest, new UpdateFightRequest
            {
                Id = fightDto.Id,
                Name = fightDto.Name,
            });

        var updateFightDialog = await DialogService.ShowAsync<UpdateFightDialog>("Update Fight", parameters, dialogOptions);
        var result = await updateFightDialog.Result;
        if (!result.Canceled)
            await table.ReloadServerData();
    }

    private async Task CreateFight()
    {
        var dialogOptions = new DialogOptions() { CloseOnEscapeKey = true, CloseButton = true };
        var parameters = new DialogParameters<CreateFightDialog>();
        parameters.Add(x => x.CreateFightRequest, new CreateFightRequest());

        var createFightDialog = await DialogService.ShowAsync<CreateFightDialog>("Create Fight", parameters, dialogOptions);
        var result = await createFightDialog.Result;
        if (!result.Canceled)
            await table.ReloadServerData();
    }
}
