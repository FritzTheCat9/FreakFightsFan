<EditForm Model="FormModel"
          OnValidSubmit="HandleValidSubmit">
    <CustomValidator @ref="_customValidator" />
    <FluentValidationValidator />

    <MudDialog DefaultFocus="DefaultFocus.LastChild">
        <DialogContent>
            <FritzFileInput @bind-File="FormModel.File"
                            @bind-ImageBase64="FormModel.ImageBase64"
                            ForFile="() => FormModel.File"
                            ForImageBase64="() => FormModel.ImageBase64"
                            Url="@Url" />
            <FritzValidationMessage For="() => FormModel.ImageBase64" />
            <FritzValidationMessage For="() => FormModel.File" />
            @if (FormModel?.File is not null)
            {
                <FritzValidationMessage For="() => FormModel.File.Size" />
                <FritzValidationMessage For="() => FormModel.File.ContentType" />
            }

            <FritzTextField @bind-Value="FormModel.FirstName"
                            For="() => FormModel.FirstName"
                            Label="@Localizer[nameof(AppStrings.FirstName)]" />
            <FritzValidationMessage For="() => FormModel.FirstName" />

            <FritzTextField @bind-Value="FormModel.LastName"
                            For="() => FormModel.LastName"
                            Label="@Localizer[nameof(AppStrings.LastName)]" />
            <FritzValidationMessage For="() => FormModel.LastName" />

            <FritzTextField @bind-Value="FormModel.Nickname"
                            For="() => FormModel.Nickname"
                            Label="@Localizer[nameof(AppStrings.Nickname)]" />
            <FritzValidationMessage For="() => FormModel.Nickname" />

            <FritzTextField @bind-Value="FormModel.InstagramUrl"
                            For="() => FormModel.InstagramUrl"
                            Label="@Localizer[nameof(AppStrings.InstagramUrl)]" />
            <FritzValidationMessage For="() => FormModel.InstagramUrl" />
        </DialogContent>
        <DialogActions>
            <MudButton ButtonType="ButtonType.Submit"
                       Color="Color.Primary">
                @Localizer[nameof(AppStrings.Update)]
            </MudButton>
        </DialogActions>
    </MudDialog>
</EditForm>