<EditForm Model=Command
          OnValidSubmit=HandleValidSubmit>
    <CustomValidator @ref=_customValidator />
    <FluentValidationValidator />

    <MudDialog DefaultFocus=DefaultFocus.LastChild>
        <DialogContent>
            <FritzFileInput @bind-Value=Command.ImageBase64
                            For="() => Command.ImageBase64"
                            OnImageBase64Changed=@((image) => Command.ImageBase64 = image)
                            Url=@Url />
            <FritzValidationMessage For="() => Command.ImageBase64" />

            <FritzTextField Label=@Localizer[nameof(AppStrings.FirstName)]
                            @bind-Value=Command.FirstName
                            For="() => Command.FirstName" />
            <FritzValidationMessage For="() => Command.FirstName" />

            <FritzTextField Label=@Localizer[nameof(AppStrings.LastName)]
                            @bind-Value=Command.LastName
                            For="() => Command.LastName" />
            <FritzValidationMessage For="() => Command.LastName" />

            <FritzTextField Label=@Localizer[nameof(AppStrings.Nickname)]
                            @bind-Value=Command.Nickname
                            For="() => Command.Nickname" />
            <FritzValidationMessage For="() => Command.Nickname" />

            <FritzTextField Label=@Localizer[nameof(AppStrings.InstagramUrl)]
                            @bind-Value=Command.InstagramUrl
                            For="() => Command.InstagramUrl" />
            <FritzValidationMessage For="() => Command.InstagramUrl" />
        </DialogContent>
        <DialogActions>
            <MudButton ButtonType=ButtonType.Submit
                       Color=Color.Primary>
                @Localizer[nameof(AppStrings.Update)]
            </MudButton>
        </DialogActions>
    </MudDialog>
</EditForm>
