@inject IMyDictionaryApiClient MyDictionaryApiClient
@inject IExceptionHandler ExceptionHandler

<EditForm @ref="@form" Model="CreateMyDictionaryCommand">
    <ServerValidator @ref="@serverValidator" />
    <FluentValidationValidator />

    <MudDialog DefaultFocus="DefaultFocus.LastChild">
        <DialogContent>
            <InputText @bind-Value="CreateMyDictionaryCommand.Name" DisplayName="Name" />
            @* <MudTextField Label="Name" @bind-Value="CreateMyDictionaryCommand.Name" /> *@
            @* TO DO: zmienić bibliotekę na FluentUI bo MudBlazor ma słabe formularze ok ok *@
            <ValidationMessage For="@(() => CreateMyDictionaryCommand.Name)" />

            <InputText @bind-Value="CreateMyDictionaryCommand.Code" DisplayName="Code" />
            @* <MudTextField Label="Code" @bind-Value="CreateMyDictionaryCommand.Code" /> *@
            <ValidationMessage For="@(() => CreateMyDictionaryCommand.Code)" />
        </DialogContent>
        <DialogActions>
            <MudButton OnClick="Cancel">Cancel</MudButton>
            <MudButton OnClick="HandleValidSubmit" Color="Color.Primary">Create</MudButton>
        </DialogActions>
    </MudDialog>
</EditForm>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }
    [Parameter] public CreateMyDictionary.Command CreateMyDictionaryCommand { get; set; } = new();

    private EditForm form;
    private ServerValidator serverValidator;

    private void Cancel() => MudDialog.Cancel();

    private async Task HandleValidSubmit()
    {
        try
        {
            var isValid = form.EditContext.Validate();

            if (isValid)
            {
                await MyDictionaryApiClient.CreateMyDictionary(CreateMyDictionaryCommand);
                MudDialog.Close(DialogResult.Ok(true));
            }
        }
        catch (MyValidationException validationException)
        {
            serverValidator.DisplayErrors(validationException.Errors);
        }
        catch (Exception ex)
        {
            ExceptionHandler.HandleExceptions(ex);
        }
    }
}