<AuthorizeView>
    <Authorized>
        <MudStack AlignItems="AlignItems.Center"
                  Row="true"
                  Spacing="2">
            <MudText>
                @context.User.Identity?.Name
            </MudText>
            <MudButton Color="Color.Secondary"
                       OnClick="Logout"
                       Variant="Variant.Filled">
                @Localizer[nameof(AppStrings.Logout)]
            </MudButton>
        </MudStack>
    </Authorized>
    <NotAuthorized>
        <MudStack Row="true"
                  Spacing="2">
            <MudButton Color="Color.Secondary"
                       OnClick="Login"
                       Variant="Variant.Filled">
                @Localizer[nameof(AppStrings.Login)]
            </MudButton>
            <MudButton Color="Color.Tertiary"
                       OnClick="Register"
                       Variant="Variant.Filled">
                @Localizer[nameof(AppStrings.Register)]
            </MudButton>
        </MudStack>
    </NotAuthorized>
</AuthorizeView>