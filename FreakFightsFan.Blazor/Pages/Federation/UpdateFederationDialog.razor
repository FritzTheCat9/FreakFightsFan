@inject IFederationApiClient FederationApiClient
@inject IExceptionHandler ExceptionHandler

<MudForm Model="UpdateFederationCommand" @ref="@form" Validation="validationErrors.Errors">
    <MudDialog DefaultFocus="DefaultFocus.LastChild">
        <DialogContent>
            <MyFileInput @bind-ImageBase64="UpdateFederationCommand.ImageBase64" @bind-IsImageValid="IsImageValid" @bind-ValidationErrors="validationErrors.Errors" Url="@Url" />
            <MyValidationMessage T="string" For="@(() => UpdateFederationCommand.ImageBase64)" ValidationErrors="validationErrors" />

            <MudTextField Label="Name" @bind-Value="UpdateFederationCommand.Name" For="@(() => UpdateFederationCommand.Name)" />
        </DialogContent>
        <DialogActions>
            <MudButton OnClick="Cancel">Cancel</MudButton>
            <MudButton OnClick="HandleValidSubmit" Color="MudBlazor.Color.Primary">Update</MudButton>
        </DialogActions>
    </MudDialog>
</MudForm>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }
    [Parameter] public UpdateFederation.Command  UpdateFederationCommand { get; set; } = new();
    [Parameter] public string Url { get; set; }

    private ValidationErrors validationErrors = new();
    private MudForm form;
    private bool IsImageValid { get; set; }

    private void Cancel() => MudDialog.Cancel();

    private async Task HandleValidSubmit()
    {
        try
        {
            if (!IsImageValid)
                UpdateFederationCommand.ImageBase64 = null;

            await FederationApiClient.UpdateFederation(UpdateFederationCommand);
            MudDialog.Close(MudBlazor.DialogResult.Ok(true));
        }
        catch (MyValidationException validationException)
        {
            validationErrors.Errors = validationException.Errors;
            await form.Validate();
        }
        catch (Exception ex)
        {
            ExceptionHandler.HandleExceptions(ex);
        }
    }
}
