@inject IMyDictionaryItemApiClient MyDictionaryItemApiClient
@inject IExceptionHandler ExceptionHandler

<MudForm Model="CreateMyDictionaryItemCommand" @ref="@form" Validation="validationErrors.Validate">
    <MudDialog DefaultFocus="DefaultFocus.LastChild">
        <DialogContent>
            <MudTextField Label="Name" @bind-Value="CreateMyDictionaryItemCommand.Name" For="@(() => CreateMyDictionaryItemCommand.Name)" />
            <MudTextField Label="Code" @bind-Value="CreateMyDictionaryItemCommand.Code" For="@(() => CreateMyDictionaryItemCommand.Code)" />
        </DialogContent>
        <DialogActions>
            <MudButton OnClick="Cancel">Cancel</MudButton>
            <MudButton OnClick="HandleValidSubmit" Color="MudBlazor.Color.Primary">Create</MudButton>
        </DialogActions>
    </MudDialog>
</MudForm>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }
    [Parameter] public CreateMyDictionaryItem.Command CreateMyDictionaryItemCommand { get; set; } = new();

    private ValidationErrors validationErrors = new();
    private MudForm form;

    private void Cancel() => MudDialog.Cancel();

    private async Task HandleValidSubmit()
    {
        try
        {
            await MyDictionaryItemApiClient.CreateMyDictionaryItem(CreateMyDictionaryItemCommand);
            MudDialog.Close(MudBlazor.DialogResult.Ok(true));
        }
        catch (MyValidationException validationException)
        {
            validationErrors.Errors = validationException.Errors;
            await form.Validate();
        }
        catch (Exception ex)
        {
            ExceptionHandler.HandleExceptions(ex);
        }
    }
}