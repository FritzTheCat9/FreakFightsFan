@if (Fighter is not null)
{
    <MudItem Class="d-flex">
        <MudStack Row=true>
            <MudAvatar Size=Size.Large>
                <ChildContent>
                    @if (!string.IsNullOrEmpty(Fighter.Image?.Url))
                    {
                        <MudImage Src=@Fighter.Image.Url
                                  Alt=@Localizer[nameof(AppStrings.Image)] />
                    }
                    else
                    {
                        <MudImage Src="images_default/default_user_image.png"
                                  ObjectFit=ObjectFit.Contain
                                  Fluid=true
                                  Alt=@Localizer[nameof(AppStrings.Image)]
                                  Style="max-height: 250px;" />
                    }
                </ChildContent>
            </MudAvatar>
            <MudText Class="align-self-center">
                @Fighter.FirstName @Fighter.LastName - @Fighter.Nickname
            </MudText>
        </MudStack>
    </MudItem>
}
