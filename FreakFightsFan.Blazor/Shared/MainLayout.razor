@inherits LayoutComponentBase

<MudThemeProvider />
<MudDialogProvider FullWidth="true" />
<MudSnackbarProvider />

<FluentToastProvider />
<FluentDialogProvider />
<FluentTooltipProvider />
<FluentMessageBarProvider />

<style>
    .mud-input-control-helper-container {
        display: none !important;
    }
</style>

<MudLayout>
    <MudAppBar>
        <MudIconButton Icon="@MudBlazor.Icons.Material.Filled.Menu" Color="MudBlazor.Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        Freak Fights Fan
        <MudSpacer />
        <Auth />
    </MudAppBar>
    <MudDrawer @bind-Open="@_drawerOpen">
        <NavMenu />
    </MudDrawer>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Large" Style="margin-top: 20px;">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}