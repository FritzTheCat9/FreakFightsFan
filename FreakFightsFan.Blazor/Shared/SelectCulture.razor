<MudSelect Label="@Localizer[nameof(AppStrings.SelectLanguage)]"
           T="Culture"
           Value="CurrentCulture"
           ValueChanged="OnValueChanged"
           Variant="Variant.Outlined">
    @foreach (var culture in LocalizationConsts.SupportedCultures)
    {
        <MudSelectItem T=Culture
                       Value=culture>
            @culture.Country
        </MudSelectItem>
    }
</MudSelect>