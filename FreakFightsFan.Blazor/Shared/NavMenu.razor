            <MudNavLink Href="/dictionaries" Match="NavLinkMatch.Prefix">@Localizer[nameof(AppStrings.Dictionaries)]</MudNavLink>
            <MudNavLink Href="/users" Match="NavLinkMatch.Prefix">@Localizer[nameof(AppStrings.Users)]</MudNavLink>
