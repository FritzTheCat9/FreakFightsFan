@inject IStringLocalizer<App> Localizer

<MudNavMenu>
    <MudNavLink Href="/" Match="NavLinkMatch.All">@Localizer[nameof(AppStrings.Home)]</MudNavLink>
    @* <MudNavLink Href="/tests" Match="NavLinkMatch.Prefix">Tests</MudNavLink> *@
